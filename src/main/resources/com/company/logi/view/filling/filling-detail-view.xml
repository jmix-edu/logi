<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://fillingDetailView.title"
      focusComponent="form">
    <data>
        <instance id="fillingDc"
                  class="com.company.logi.entity.Filling">
            <fetchPlan extends="_base">
                <property name="transport" fetchPlan="_base"/>
                <property name="product" fetchPlan="_base"/>
                <property name="filler" fetchPlan="_base"/>
                <property name="shipment" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="fillingDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="fillingDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <entityPicker id="transportField" property="transport">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <entityPicker id="productField" property="product">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <dateTimePicker id="fillingDateField" property="fillingDate"/>
            <textField id="volumeField" property="volume"/>
            <entityPicker id="fillerField" property="filler">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField id="weightField" property="weight"/>
            <entityPicker id="shipmentField" property="shipment">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
