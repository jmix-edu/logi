<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://productListView.title"
      focusComponent="productsDataGrid">
    <data>
        <collection id="productsDc"
                    class="com.company.logi.entity.Product">
            <fetchPlan extends="_base"/>
            <loader id="productsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Product e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout alignItems="STRETCH"
            padding="false" spacing="false"
            expand="contentBox">
        <vbox id="contentBox" classNames="overflow-auto">
            <genericFilter id="genericFilter"
                           dataLoader="productsDl">
                <properties include=".*"/>
            </genericFilter>
            <hbox id="buttonsPanel" classNames="buttons-panel">
                <startSlot>
                    <button id="createButton" action="productsDataGrid.createAction"/>
                    <button id="editButton" action="productsDataGrid.editAction"/>
                    <button id="removeButton" action="productsDataGrid.removeAction"/>
                </startSlot>
                <endSlot>
                    <simplePagination id="pagination" dataLoader="productsDl"/>
                </endSlot>
            </hbox>
            <dataGrid id="productsDataGrid"
                      width="100%"
                      minHeight="20em"
                      dataContainer="productsDc"
                      columnReorderingAllowed="true">
                <actions>
                    <action id="createAction" type="list_create"/>
                    <action id="editAction" type="list_edit"/>
                    <action id="removeAction" type="list_remove"/>
                </actions>
                <columns resizable="true">
                    <column property="name"/>
                    <column property="code"/>
                    <column property="producerName"/>
                    <column property="producerCode"/>
                </columns>
            </dataGrid>
        </vbox>
        <hbox id="lookupActions" visible="false"
              classNames="px-m py-s bg-contrast-5">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
