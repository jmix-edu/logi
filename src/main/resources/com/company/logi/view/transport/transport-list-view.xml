<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://transportListView.title"
      focusComponent="transportsDataGrid">
    <data>
        <collection id="transportsDc"
                    class="com.company.logi.entity.Transport">
            <fetchPlan extends="_base"/>
            <loader id="transportsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Transport e]]>
                </query>
            </loader>
        </collection>
        <instance id="transportDc"
                  class="com.company.logi.entity.Transport">
            <fetchPlan extends="_base"/>
            <loader id="transportDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout id="layoutWrapper" classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <genericFilter id="genericFilter"
                               dataLoader="transportsDl">
                    <properties include=".*"/>
                </genericFilter>
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <startSlot>
                        <button id="createButton" action="transportsDataGrid.createAction"/>
                        <button id="editButton" action="transportsDataGrid.editAction"/>
                        <button id="removeButton" action="transportsDataGrid.removeAction"/>
                    </startSlot>
                    <endSlot>
                        <simplePagination id="pagination" dataLoader="transportsDl"/>
                    </endSlot>
                </hbox>
                <dataGrid id="transportsDataGrid"
                          width="100%"
                          minHeight="20em"
                          dataContainer="transportsDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="createAction" type="list_create"/>
                        <action id="editAction" type="list_edit"/>
                        <action id="removeAction" type="list_remove"/>
                    </actions>
                    <columns resizable="true">
                        <column property="code"/>
                        <column property="ownerNawme"/>
                        <column property="model"/>
                        <column property="capacity"/>
                        <column property="isFilled"/>
                        <column property="tareWeight"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectButton" action="selectAction"/>
                    <button id="discardButton" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="transportDc">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="40em" columns="2"/>
                    </responsiveSteps>
                    <textField id="codeField" property="code"/>
                    <textField id="ownerNawmeField" property="ownerNawme"/>
                    <textField id="modelField" property="model"/>
                    <textField id="capacityField" property="capacity"/>
                    <checkbox id="isFilledField" property="isFilled"/>
                    <textField id="tareWeightField" property="tareWeight"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveButton" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelButton" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
