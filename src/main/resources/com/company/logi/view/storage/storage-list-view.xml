<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://storageListView.title"
      focusComponent="storagesDataGrid">
    <data>
        <collection id="storagesDc"
                    class="com.company.logi.entity.Storage">
            <fetchPlan extends="_base">
                <property name="companyUnit" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="storagesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Storage e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="storagesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <startSlot>
                <button id="createButton" action="storagesDataGrid.createAction"/>
                <button id="editButton" action="storagesDataGrid.editAction"/>
                <button id="removeButton" action="storagesDataGrid.removeAction"/>
                <button id="showOnMapButton" action="storagesDataGrid.showOnMap"/>
            </startSlot>
            <endSlot>
                <simplePagination id="pagination" dataLoader="storagesDl"/>
            </endSlot>
        </hbox>
        <dataGrid id="storagesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="storagesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
                <action id="showOnMap" type="list_itemTracking" text="msg://actions.showOnMap.text"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="code"/>
                <column property="operations"/>
                <column property="address"/>
                <column property="companyUnit"/>
                <column property="location"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
